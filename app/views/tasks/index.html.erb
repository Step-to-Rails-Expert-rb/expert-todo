<h1><%= t("tasks.index.title") %></h1>
<h2><%= link_to t("common.new"), new_task_path %></h2>
<table>
  <thead>
  <tr>
    <th>#</th>
    <th><%= t "activerecord.attributes.task.task_name"  %></th>
    <th><%= t "activerecord.attributes.task.description"  %></th>
    <th><%= t "activerecord.attributes.task.due_date"  %></th>
    <th><%= t "activerecord.attributes.task.created_at"  %></th>
    <th><%= t "activerecord.attributes.task.updated_at"  %></th>
    <th>削除</th>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to t("common.edit"), edit_task_path(task.id) %></td>
        <td><%= task.task_name %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date_without_time %></td>
        <td><%= task.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= task.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= link_to t("common.destroy"), task_path(task.id), method: "DELETE" %></td>
      </tr>
  <% end %>
  </tbody>
</table>


