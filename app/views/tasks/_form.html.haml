= form_with model: [@task.project,@task],local: true do |form|
  = form.label :title
  = form.text_field :title
  %br
  = form.label :description
  = form.text_area :description
  %br
  = form.label :start_on
  = form.date_field :start_on
  %br
  = form.label :end_on
  = form.date_field :end_on
  - if @task.persisted?
    %br
    = form.label :state
    = form.number_field :state
  %br
  %br
  = form.submit "Submit"